<Screen xmlns="runtime-namespace:Game">

  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="[SettingsScreen:1]" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

       <CanvasWidget Size="Infinity, Infinity">
        <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="8, 0">
            <BevelledButtonWidget Name="Performance" Text="[SettingsScreen:2]" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Graphics" Text="[SettingsScreen:3]" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Ui" Text="[SettingsScreen:4]" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
          </StackPanelWidget>
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="8, 0">
            <BevelledButtonWidget Name="Audio" Text="[SettingsScreen:5]" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Controls" Text="[SettingsScreen:6]" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Compatibility" Text="[SettingsScreen:7]" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
          </StackPanelWidget>
        </StackPanelWidget>
      </CanvasWidget>

    </StackPanelWidget>
  
  </StackPanelWidget>

</Screen>