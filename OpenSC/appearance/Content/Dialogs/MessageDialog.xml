<CanvasWidget xmlns="runtime-namespace:Game" Size="600, 250" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">

  <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
  <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="10, 10">
    <LabelWidget Name="MessageDialog.LargeLabel"  Color="255, 255, 255" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 5"/>
    <ScrollPanelWidget Direction="Vertical" Margin="20, 5">
      <LabelWidget Name="MessageDialog.SmallLabel"  Color="128, 128, 128" HorizontalAlignment="Center" VerticalAlignment="Near" TextAnchor="HorizontalCenter" WordWrap="true"/>
    </ScrollPanelWidget>
    <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Far" Margin="0, 5">
      <BevelledButtonWidget Name="MessageDialog.Button1" Style="{Styles/ButtonStyle_160x60}" Margin="40, 0"/>
      <BevelledButtonWidget Name="MessageDialog.Button2" Style="{Styles/ButtonStyle_160x60}" Margin="40, 0"/>
    </StackPanelWidget>
  </StackPanelWidget>

</CanvasWidget>
