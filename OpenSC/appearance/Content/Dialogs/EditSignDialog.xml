<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="600, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="10, 0" IsVisible="true">

      <StackPanelWidget Name="EditSignDialog.LinesPage" Direction="Vertical">

        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <LabelWidget Text="[EditSignDialog:1]" HorizontalAlignment="Center" Margin="0, 15" />
        </StackPanelWidget>

        <CanvasWidget Size="Infinity, Infinity">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="[EditSignDialog:2]"  VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center" >
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox1" Title="输入行 1" Size="360, 50" Description=""  VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton1" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="[EditSignDialog:3]"  VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center">
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox2" Title="输入行 2" Size="360, 50" Description=""  VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton2" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="[EditSignDialog:4]"  VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center">
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox3" Title="输入行 3" Size="360, 50" Description=""  VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton3" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="[EditSignDialog:5]"  VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center">
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox4" Title="输入行 4" Size="360, 50" Description=""  VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton4" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

          </StackPanelWidget>
        </CanvasWidget>

      </StackPanelWidget>

      <StackPanelWidget Name="EditSignDialog.UrlPage" Direction="Vertical" IsVisible="false">
        
        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 15">
          <LabelWidget Text="[EditSignDialog:6]" HorizontalAlignment="Center" />
          <LabelWidget Text="[EditSignDialog:7]"  Color="128, 128, 128" HorizontalAlignment="Center" Margin="0, 0" />
          <LabelWidget Text="[EditSignDialog:8]"  Color="128, 128, 128" HorizontalAlignment="Center" Margin="0, 0" />
        </StackPanelWidget>

        <CanvasWidget Size="Infinity, Infinity">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanelWidget Margin="0, 10">
              <CanvasWidget Size="480, 50" VerticalAlignment="Center" >
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.UrlTextBox" Title="输入Url" Size="480, 50" Description=""  VerticalAlignment="Center" MaximumLength="256" Margin="10, 0"/>
              </CanvasWidget>
            </StackPanelWidget>

            <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="EditSignDialog.UrlTestButton" Text="[EditSignDialog:9]" Margin="0, 10"/>

          </StackPanelWidget>
        </CanvasWidget>
        
      </StackPanelWidget>

      <UniformSpacingPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 15">
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.OkButton" Text="[EditSignDialog:10]" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.UrlButton" Text="[EditSignDialog:11]" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.LinesButton" Text="[EditSignDialog:12]" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.CancelButton" Text="[EditSignDialog:13]" />
      </UniformSpacingPanelWidget>

    </StackPanelWidget>

  </CanvasWidget>
</CanvasWidget>
