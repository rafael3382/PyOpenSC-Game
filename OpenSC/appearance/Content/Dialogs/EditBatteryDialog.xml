    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      
      <LabelWidget  Text="[EditBatteryDialog:1]" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, Infinity" />

      <SliderWidget Name="EditBatteryDialog.VoltageSlider" Granularity="1" MinValue="0" MaxValue="15" HorizontalAlignment="Center" Margin="40, 0" />
      
      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="EditBatteryDialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="[EditBatteryDialog:2]" Margin="20, 0" />
        <BevelledButtonWidget Name="EditBatteryDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="[EditBatteryDialog:3]"/>
      </StackPanelWidget>
      
    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
