<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="640, 400" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      
      <LabelWidget  Text="[MoreCommunityLinkDialog:1]" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, 5" />

      <CanvasWidget Size="Infinity, 50">
        <LabelWidget  Color="128, 128, 128" Text="[MoreCommunityLinkDialog:2]" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" Margin="30, 0"/>
      </CanvasWidget>

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <LabelWidget Text="[MoreCommunityLinkDialog:3]"  Color="128, 128, 128" HorizontalAlignment="Far" VerticalAlignment="Center"/>
        <CanvasWidget Size="20, 0" />
        <LabelWidget Name="MoreCommunityLinkDialog.User" Text="[MoreCommunityLinkDialog:4]"  VerticalAlignment="Center" ClampToBounds="true"/>
        <CanvasWidget Size="10, 0"/>
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.ChangeUser" Text="[MoreCommunityLinkDialog:5]" Style="{Styles/ButtonStyle_70x60}" VerticalAlignment="Center"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, 5" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <LabelWidget Text="[MoreCommunityLinkDialog:6]"  Color="128, 128, 128" HorizontalAlignment="Far" VerticalAlignment="Center"/>
        <CanvasWidget Size="20, 0" />
        <LabelWidget Name="MoreCommunityLinkDialog.UserId" Text="[MoreCommunityLinkDialog:7]"  VerticalAlignment="Center" ClampToBounds="true"/>
        <CanvasWidget Size="10, 0"/>
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.CopyUserId" Text="[MoreCommunityLinkDialog:8]" Style="{Styles/ButtonStyle_160x60}" VerticalAlignment="Center"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.Publish" Style="{Styles/ButtonStyle_310x60}" Text="[MoreCommunityLinkDialog:9]"/>
        <CanvasWidget Size="40, 0" />
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.Close" Style="{Styles/ButtonStyle_160x60}" Text="[MoreCommunityLinkDialog:10]"/>
      </StackPanelWidget>
      
    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
