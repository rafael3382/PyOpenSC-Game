<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="720, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <BevelledRectangleWidget BevelSize="3" />

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

      <CanvasWidget Size="0, 5" />

      <CanvasWidget Size="Infinity, 70">
        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <LabelWidget Name="BuildFurnitureDialog.Name" HorizontalAlignment="Center"/>
          <LabelWidget Name="BuildFurnitureDialog.Status"  Color="128, 128, 128, 255" HorizontalAlignment="Center"/>
        </StackPanelWidget>
        <BevelledButtonWidget Style="{Styles/ButtonStyle_70x60}" HorizontalAlignment="Far" VerticalAlignment="Center" Name="BuildFurnitureDialog.NameButton" Text="[BuildFurnitureDialog:1]" Margin="12, 0" />
      </CanvasWidget>

      <CanvasWidget Size="0, Infinity" />
      
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">

        <CanvasWidget VerticalAlignment="Center">
          <StackPanelWidget Direction="Vertical" VerticalAlignment="Center">
            <BevelledButtonWidget Size="218, 60" HorizontalAlignment="Center" Name="BuildFurnitureDialog.AxisButton"  />
            <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
              <BevelledButtonWidget Style="{Styles/ButtonStyle_Mirror}" Name="BuildFurnitureDialog.MirrorButton" />
              <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowUp}" Name="BuildFurnitureDialog.UpButton" />
              <BevelledButtonWidget Style="{Styles/ButtonStyle_TurnRight}" Name="BuildFurnitureDialog.TurnRightButton" />
            </StackPanelWidget>
            <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
              <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowLeft}" Name="BuildFurnitureDialog.LeftButton" />
              <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowDown}" Name="BuildFurnitureDialog.DownButton" />
              <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowRight}" Name="BuildFurnitureDialog.RightButton" />
            </StackPanelWidget>
            <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
              <BevelledButtonWidget Style="{Styles/ButtonStyle_Minus}" Name="BuildFurnitureDialog.DecreaseResolutionButton" />
              <CanvasWidget Size="40, 60">
                <LabelWidget Name="BuildFurnitureDialog.ResolutionLabel" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </CanvasWidget>
              <BevelledButtonWidget Style="{Styles/ButtonStyle_Plus}" Name="BuildFurnitureDialog.IncreaseResolutionButton" />
            </StackPanelWidget>
          </StackPanelWidget>
        </CanvasWidget>

        <CanvasWidget Size="4, 0" />

        <CanvasWidget Size="228, 228" VerticalAlignment="Center">
          <BevelledRectangleWidget BevelSize="-2" CenterColor="0, 0, 0"/>
          <FurnitureDesignWidget Name="BuildFurnitureDialog.Design2d" Margin="5, 5" />
        </CanvasWidget>

        <CanvasWidget Size="4, 0" />

        <CanvasWidget Size="228, 228" VerticalAlignment="Center">
          <BevelledRectangleWidget BevelSize="-2" CenterColor="0, 0, 0"/>
          <FurnitureDesignWidget Name="BuildFurnitureDialog.Design3d" Margin="5, 5"/>
        </CanvasWidget>

      </StackPanelWidget>

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="BuildFurnitureDialog.BuildButton" Text="[BuildFurnitureDialog:2]" />
        <CanvasWidget Size="20, 0" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="BuildFurnitureDialog.CancelButton" Text="[BuildFurnitureDialog:3]" />
      </StackPanelWidget>

      <CanvasWidget Size="0, 12" />

  </StackPanelWidget>

  </CanvasWidget>
</CanvasWidget>
