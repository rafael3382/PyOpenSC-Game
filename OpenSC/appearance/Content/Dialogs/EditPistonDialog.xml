<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="600, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="15, 15">
      
      <LabelWidget Name="EditPistonDialog.Title"  HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, Infinity" />

      <CanvasWidget Size="Infinity, 75">
        <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <CanvasWidget Size="180, -1" VerticalAlignment="Center">
            <LabelWidget Name="EditPistonDialog.Label1" Text="[EditPistonDialog:1]"  HorizontalAlignment="Center"/>
          </CanvasWidget>
          <SliderWidget Name="EditPistonDialog.Slider1" VerticalAlignment="Center" LabelWidth="120" />
        </StackPanelWidget>
      </CanvasWidget>

      <CanvasWidget Name="EditPistonDialog.Panel2" Size="Infinity, 75">
        <StackPanelWidget Name="EditPistonDialog.Panel2" Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <CanvasWidget Size="180, -1" VerticalAlignment="Center">
            <LabelWidget Name="EditPistonDialog.Label2" Text="[EditPistonDialog:2]"  HorizontalAlignment="Center"/>
          </CanvasWidget>
          <SliderWidget Name="EditPistonDialog.Slider2" VerticalAlignment="Center" LabelWidth="120" />
        </StackPanelWidget>
      </CanvasWidget>

      <CanvasWidget Size="Infinity, 75">
        <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <CanvasWidget Size="180, -1" VerticalAlignment="Center">
            <LabelWidget Name="EditPistonDialog.Label3" Text="[EditPistonDialog:3]"  HorizontalAlignment="Center"/>
          </CanvasWidget>
          <SliderWidget Name="EditPistonDialog.Slider3" VerticalAlignment="Center" LabelWidth="120" />
        </StackPanelWidget>
      </CanvasWidget>

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="EditPistonDialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="[EditPistonDialog:4]" Margin="20, 0" />
        <BevelledButtonWidget Name="EditPistonDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="[EditPistonDialog:5]"/>
      </StackPanelWidget>

    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
