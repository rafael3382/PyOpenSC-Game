<FurnitureInventoryPanel xmlns="runtime-namespace:Game">
  
  <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="5, 0">

    <StackPanelWidget Direction="Vertical">
      <CanvasWidget Size="284, 228">
        <BevelledRectangleWidget BevelSize="-2" CenterColor="0, 0, 0, 255" />
        <ListPanelWidget Name="FurnitureSetList" Direction="Vertical" Margin="4, 4" ItemSize="64" SelectionColor="10, 70, 0, 90"/>
      </CanvasWidget>
      <CanvasWidget Size="0, 4" />
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="AddButton" Style="{Styles/ButtonStyle_160x60}" Text="[FurnitureInventoryPanel:1]" />
        <BevelledButtonWidget Name="MoreButton" Style="{Styles/ButtonStyle_70x60}" Text="[FurnitureInventoryPanel:2]" />
      </StackPanelWidget>
    </StackPanelWidget>

    <CanvasWidget Size="4, 0"/>
        
    <CanvasWidget Size="288, 288">
      <GridPanelWidget Name="InventoryGrid" ColumnsCount="4" RowsCount="4" VerticalAlignment="Center" />
    </CanvasWidget>

  </StackPanelWidget>
  
</FurnitureInventoryPanel>
